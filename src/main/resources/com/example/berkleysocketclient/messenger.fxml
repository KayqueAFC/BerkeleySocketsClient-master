<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/fxml" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.berkleysocketclient.Controller"
      stylesheets="@chatclient-style.css">

    <!-- Título do Chat -->
    <Label text="Chat" styleClass="titulo-chat"/>

    <!-- Área de mensagens com auto-scroll -->
    <ScrollPane fx:id="scrollMensagens" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
        <VBox fx:id="vboxMensagens" spacing="10" styleClass="mensagens-container"/>
    </ScrollPane>

    <!-- Área de entrada de mensagem com alinhamento correto -->
    <HBox fx:id="boxInput" spacing="10" alignment="CENTER_RIGHT" styleClass="input-container">
        <TextArea fx:id="campoMensagem" HBox.hgrow="ALWAYS"
                  promptText="Digite sua mensagem aqui..."
                  wrapText="true"
                  styleClass="campo-texto"/>
        <Button fx:id="botaoEnviar" text="Enviar" styleClass="botao-enviar"/>
    </HBox>
</VBox>
